    <LinearLayout
        android:id="@+id/lllll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#b4d0eb"
            android:gravity="center"
            android:text="物资名称"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#d5d5cf"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#adeab5"
            android:gravity="center"
            android:text="型号"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#d5d5cf"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#f2d7a6"
            android:gravity="center"
            android:text="数量"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lllll"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_goods_commit"
            android:layout_below="@+id/lllll"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/list_view_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="#00000000"
                android:dividerHeight="0dip"></ListView>

            <ListView
                android:id="@+id/list_view_modle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="#00000000"
                android:dividerHeight="0dip"></ListView>

            <ListView
                android:id="@+id/list_view_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="#00000000"
                android:dividerHeight="0dip"></ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.85"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/lst"
                android:background="#c8c8c7"></View>

            <RelativeLayout
                android:id="@+id/rr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leeee"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    android:textColor="#000000"
                    android:textSize="@dimen/artficl_means_size" />

                <EditText
                    android:id="@+id/edt_goods_note"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv5"
                    android:background="@drawable/shape_border4"
                    android:gravity="top"
                    android:padding="7dp"
                    android:textCursorDrawable="@drawable/shape_cursor_color"
                    android:textSize="@dimen/artficl_means_size"></EditText>

                <TextView
                    android:id="@+id/tv_goods_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/edt_goods_note"
                    android:layout_alignRight="@id/edt_goods_note"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="还可输入25字"
                    android:textSize="14sp" />
            </RelativeLayout>
            <Button
                android:id="@+id/btn_goods_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_commit_height"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/rey3"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_yes"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


