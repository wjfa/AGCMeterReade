<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frist_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.guanchao.app.fragmet.FristFragment">

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/color_title_bg2">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_service1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img3"
            android:text="相机"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_photo_before"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:background="@drawable/shape_border3"
                android:src="@drawable/ic_photo_kuang" />

            <TextView
                android:id="@+id/tv_prmopt1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="请对准您要拍照的物品"
                android:textColor="#ffffff"
                android:textSize="8sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_photo_now"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:background="@drawable/shape_border3"
                android:src="@drawable/ic_photo_kuang" />

            <TextView
                android:id="@+id/tv_prmopt2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="请对准您要拍照的物品"
                android:textColor="#ffffff"
                android:textSize="8sp" />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_photo_after"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:background="@drawable/shape_border3"
                android:src="@drawable/ic_photo_kuang" />

            <TextView
                android:id="@+id/tv_prmopt3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="请对准您要拍照的物品"
                android:textColor="#ffffff"
                android:textSize="8sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line5"
        android:background="#ffffff"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_service2"
            android:gravity="center"
            android:text="维修前"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_service3"
            android:gravity="center"
            android:text="维修中"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_service4"
            android:gravity="center"
            android:text="维修后"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line7"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/color_title_bg2">

        <ImageView
            android:id="@+id/img7"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_service5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img7"
            android:text="报修"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>
    <!--报修部分-->
    <LinearLayout
        android:id="@+id/linnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/le1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/view"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="报修人："
                    android:textColor="#000000"
                    android:textSize="@dimen/artficl_means_size" />

                <EditText
                    android:id="@+id/edt_service_repairs_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:background="@null"
                    android:focusable="false"
                    android:textSize="@dimen/artficl_means_size"
                    android:enabled="false"/>
            </RelativeLayout>

            <!--分割线-->
            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/view"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:text="电话："
                    android:textColor="#000000"
                    android:textSize="@dimen/artficl_means_size" />

                <EditText
                    android:id="@+id/edt_service_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/tv2"
                    android:background="@null"
                    android:focusable="false"
                    android:textSize="@dimen/artficl_means_size"
                    android:enabled="false"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/le2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="时间："
                    android:textColor="#000000"
                    android:textSize="@dimen/artficl_means_size" />

                <EditText
                    android:id="@+id/edt_service_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/tv3"
                    android:background="@null"
                    android:paddingRight="8dp"
                    android:textColor="#000000"
                    android:textSize="@dimen/artficl_means_size"
                    android:enabled="false"
                    android:focusable="false"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border4">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="地址："
                android:textColor="#000000"
                android:textSize="@dimen/artficl_means_size" />

            <EditText
                android:id="@+id/edt_service_addres"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/tv4"
                android:background="@null"
                android:focusable="false"
                android:enabled="false"
                android:textSize="@dimen/artficl_means_size" />
        </RelativeLayout>
        <!--报修内容-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:text="报修内容："
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_repairs_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_border"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:textSize="@dimen/artficl_means_size"
            android:focusable="false"
            android:enabled="false"/>

        <!--维修内容-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:text="维修内容："
            android:textColor="#000000"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_service_content"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:background="@drawable/shape_border"
                android:hint="暂无维修内容,请输入！"
                android:gravity="top"
                android:textSize="@dimen/artficl_means_size"
                android:textCursorDrawable="@drawable/shape_cursor_color"/>
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_service_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_commit_height"
        android:layout_below="@+id/linnn"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_no_click"
        android:enabled="false"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="20sp" />


    <!--加载页面-->
    <RelativeLayout
        android:id="@+id/rel_service_fault_ref"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@drawable/shape_login_rel">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifView_login"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15px"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_login_r"></pl.droidsonroids.gif.GifImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="请稍后..."
            android:textColor="#fff"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
