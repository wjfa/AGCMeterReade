<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_frist_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dbdbd8"
    tools:context="com.guanchao.app.fragmet.FristFragment">

    <!--toolbar标题-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#27A5F9"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP移动互联抄表系统"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/toolbar_title_size"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_first_unlogin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_login_user2"
            android:text=" 退出登录"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginRight="6dp"/>
    </android.support.v7.widget.Toolbar>

    <!--注：这些属性设置只是为了圆形指示器有用   对数字指示器无效果
     delay_time	integer	轮播间隔时间，默认2000
     scroll_time	integer	轮播滑动执行时间，默认800
     is_auto_play	boolean	是否自动轮播，默认true
     title_background	color	reference
     title_textcolor	color	标题字体颜色
     title_textsize	dimension	标题字体大小
     title_height	dimension	标题栏高度
     indicator_width	dimension	指示器圆形按钮的宽度
     indicator_height	dimension	指示器圆形按钮的高度
     indicator_margin	dimension	指示器之间的间距
     indicator_drawable_selected	reference	指示器选中效果
     indicator_drawable_unselected	reference	指示器未选中效果
     image_scale_type	enum	和imageview的ScaleType作用一样
 -->


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_textcolor="#ff0"
        app:indicator_margin="5dp"
        app:indicator_drawable_unselected="@color/color_no"
        app:indicator_drawable_selected="@color/color_ok"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/shape_color_top">

            <TextView
                android:id="@+id/tv_watch"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:drawableTop="@mipmap/ic_main1"
                android:text="抄表任务"
                android:textColor="#000000"
                android:textSize="@dimen/frist_main_size"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/sel_frist_text"/>
            <TextView
                android:id="@+id/tv_repairs"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:drawableTop="@mipmap/ic_main2"
                android:text="用户报修"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="@dimen/frist_main_size"
                android:gravity="center"
                android:background="@drawable/sel_frist_text"/>
            <TextView
                android:id="@+id/tv_service_repairs"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:drawableTop="@mipmap/ic_main3"
                android:text="维修任务"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="@dimen/frist_main_size"
                android:gravity="center"
                android:background="@drawable/sel_frist_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_below="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tv_user_message"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:drawableTop="@mipmap/ic_main4"
                android:text="打卡签到"
                android:textColor="#000000"
                android:textSize="@dimen/frist_main_size"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/sel_frist_text"/>

            <TextView
                android:id="@+id/tv_artifical_photo"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:drawableTop="@mipmap/ic_main5"
                android:text="物资申请"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="@dimen/frist_main_size"
                android:gravity="center"
                android:background="@drawable/sel_frist_text"/>
            <TextView
                android:id="@+id/tv_qrcode"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:drawableTop="@mipmap/ic_main6"
                android:text="扫码读表"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="@dimen/frist_main_size"
                android:gravity="center"
                android:background="@drawable/sel_frist_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:background="@drawable/shape_color_bottom">
            <TextView
                android:id="@+id/tv_noticea"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:drawableTop="@mipmap/ic_main7"
                android:text="通知公告"
                android:textColor="#000000"
                android:textSize="@dimen/frist_main_size"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/sel_frist_text"/>
            <TextView
                android:id="@+id/tv_operation"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:drawableTop="@mipmap/ic_main8"
                android:text="操作手册"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="@dimen/frist_main_size"
                android:gravity="center"
                android:background="@drawable/sel_frist_text"/>
            <TextView
                android:id="@+id/tv_problem_feedback"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:drawableTop="@mipmap/ic_main9"
                android:text="问题反馈"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="@dimen/frist_main_size"
                android:gravity="center"
                android:background="@drawable/sel_frist_text"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
