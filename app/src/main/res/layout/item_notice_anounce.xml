<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frist_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.guanchao.app.fragmet.FristFragment">

    <RelativeLayout
        android:id="@+id/rel_notice"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/sel_background">

        <ImageView
            android:id="@+id/img_notice_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_watch_icon"/>

        <TextView
            android:id="@+id/tv_item_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_notice_photo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
           android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/img_notice_photo"
            android:text="标题"
            android:textColor="#333333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_item_notive_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_notice_title"
            android:layout_below="@+id/tv_item_notice_title"
            android:layout_marginTop="5dp"
            android:text="内容少时诵诗书所所所所生三少时诵诗书是是是搜索世少是是是是是时诵对对对到达"
            android:layout_marginRight="15dp"
            android:textColor="#888888"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_item_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_item_notive_content"
            android:text="2017-12-8"
            android:textColor="#333333"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>
