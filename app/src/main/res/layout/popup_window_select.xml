<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="116dp"
    android:background="@mipmap/ic_select_type_bg">

    <RelativeLayout
        android:id="@+id/rr1"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_no_watch"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:text="\t未抄"
            android:drawableLeft="@drawable/ic_select_type_no"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image_no_watch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_screening_logo" />

    </RelativeLayout>

    <View
        android:id="@+id/vv"
        android:layout_width="125dp"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/rr1"
        android:background="#8a8a8a"></View>

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="46dp"
        android:layout_below="@+id/vv"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tv_yes_wacth"
            android:layout_width="125dp"
            android:layout_height="46dp"
            android:drawableLeft="@drawable/ic_select_type_yes"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:text="\t已抄"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image_yes_watch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_screening_logo" />

    </RelativeLayout>

</RelativeLayout>
