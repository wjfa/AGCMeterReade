<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frist_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guanchao.app.fragmet.FristFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/img_aretificl_photo"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/shape_border3"
                android:src="@drawable/ic_photo_kuang" />

            <TextView
                android:id="@+id/tv_artifical_prompt"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="请对准您要拍照的物品"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_artific_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_artfic1"
                android:gravity="center"
                android:text="选择用户"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/sel_frist_text"/>

            <TextView
                android:id="@+id/tv_artific_get_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_artfic4"
                android:gravity="center"
                android:text="获取位置"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/sel_frist_text"/>

            <TextView
                android:id="@+id/tv_artific_photo_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_artfic2"
                android:gravity="center"
                android:text="照片采集"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/sel_frist_text"/>

        </LinearLayout>
    </LinearLayout>
    <!--资料-->
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line7"
        android:layout_marginTop="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/color_title_bg2">

        <ImageView
            android:id="@+id/img7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_artfic3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img7"
            android:text="资料信息"
            android:textColor="#000000"
            android:textSize="22sp" />
    </RelativeLayout>
    <!--详情信息-->
    <LinearLayout
        android:id="@+id/linnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1"
        android:background="@drawable/shape_color_bottom"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/le1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/view"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="户号："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_artific_house_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
            </RelativeLayout>

            <!--分割线-->
            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/view"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="户名："
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/edt_artific_house_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv2"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
            </RelativeLayout>
        </RelativeLayout>

        <!--门牌号和电话-->
        <RelativeLayout
            android:id="@+id/re3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/le2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/view2"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="门牌号："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_artific_house_door_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv3"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
            </RelativeLayout>

            <!--分割线-->
            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/view2"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="电话："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/tv4"
                    android:id="@+id/edt_artific_phone"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
            </RelativeLayout>
        </RelativeLayout>

        <!--详细地址-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="详细地址："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_artific_addres"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/tv5"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
            </RelativeLayout>
        </RelativeLayout>


        <!--上次和本次读数-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/le11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/view3"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="上次读数："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_artific_last_reade"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv6"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
            </RelativeLayout>

            <!--分割线-->
            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/view3"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="本次读数："
                    android:textColor="#2cd468"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_artific_now_reade"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv7"
                    android:textColor="#2cd468"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <!--水表钢号和本次使用-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/le12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/view4"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv22"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="水表钢号："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_artific_water_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv22"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
            </RelativeLayout>

            <!--分割线-->
            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/view4"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv12"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="本次用量："
                    android:textColor="#2cd468"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_artific_now_amouter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv12"
                    android:textColor="#2cd468"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
            </RelativeLayout>
        </RelativeLayout>
        <!--经纬度-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv13"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="经纬度："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_toRightOf="@+id/tv13"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_artific_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
                <EditText
                    android:id="@+id/edt_artific_Latitude"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/edt_artific_longitude"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!--安装位置-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_border4">

                <TextView
                    android:id="@+id/tv14"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="安装位置："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_artific_installation_position"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/tv14"
                    android:textSize="17sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="false"/>
            </RelativeLayout>
        </RelativeLayout>


        <!--备注-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv15"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="备注："
                    android:textColor="#2cd468"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_artific_note"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv15"
                    android:textSize="17sp"
                    android:background="@null"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignLeft="@+id/edt_artific_note"
                    android:layout_below="@+id/edt_artific_note"
                    android:background="#2cd468"></View>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_aretific_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:clickable="false"
        android:background="@color/color_no_click"/>
</LinearLayout>
