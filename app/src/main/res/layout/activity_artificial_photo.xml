<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_artificial_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e7e7"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.guanchao.app.ArtificialPhotoActivity">


    <!--toolbar标题-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#27A5F9"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:id="@+id/ig_back"
                android:layout_width="66dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_back"
                android:gravity="center_vertical"
                android:text="返回"
                android:paddingLeft="-6dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/toolbar_back_size" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="人工拍照"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/toolbar_title_size" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/scroll_aretificl_photo"></include>
    </ScrollView>

</LinearLayout>
